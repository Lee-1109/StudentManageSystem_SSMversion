<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="model.Student">

    <resultMap type="Student" id="students">
        <result column="STU_ID" property="id"/>
        <result column="STU_NAME" property="name"/>
        <result column="CLASS_ID" property="classes"/>
        <result column="STU_AGE" property="age"/>
        <result column="STU_GENDER" property="gender"/>
    </resultMap>

    <select id="fromStudents" resultMap="students">
        call proc_getAllStudent
	</select>
    <select id="selectStudentByPage" parameterType="Map" resultMap="students">
        select * from student limit #{startIndex},#{pageSize}
    </select>
    <select id="findByCondition" parameterType="String" resultMap="students">
        select * from student s where s.STU_NAME like #{condition} or s.CLASS_ID like #{condition} or s.STU_ID like #{condition}
        or s.STU_GENDER like #{condition}
    </select>

    <update id="updateOneStudent" parameterType="Student">
        update student set STU_NAME=#{name},STU_AGE=#{age},CLASS_ID=#{classes} where STU_ID=#{id}
    </update>
    <delete id="deleteOneStudent" parameterType="String">
        delete from student where STU_ID=#{studentId}
    </delete>
</mapper>